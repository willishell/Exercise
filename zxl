#!/bin/bash
touch message.txt   
mv message.txt Documents   
ls -l Documents   
cd Documents  
sudo cp message.txt /home  
unlink message.txt        #delete message.txt
cd /home
sudo unlink message.txt   #delete message.txt from /home
